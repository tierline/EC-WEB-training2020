<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.training.common.repository.ProductRepository">
	<select id="findAll"
		resultType="com.example.training.common.entity.ProductEntity">
		SELECT
		*
		FROM
		PRODUCT
	</select>

	<select id="findById"
		resultType="com.example.training.common.entity.ProductEntity">
		SELECT
		*
		FROM
		PRODUCT
		WHERE
		id = ${value}
	</select>
	<select id="findName"
		resultType="com.example.training.common.entity.ProductEntity">
		SELECT
		*
		FROM
		PRODUCT
		WHERE
		name LIKE
		'%${searchQuery}%'
	</select>

</mapper>
