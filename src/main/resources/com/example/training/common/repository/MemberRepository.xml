<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.training.common.repository.MemberRepository">

	<select id="findByEmail"
		resultType="com.example.training.common.entity.MemberEntity">
		SELECT
		id as memberId,
		email,
		password,
		last_name,
		first_name,
		phone_number,
		postcode,
		prefecture,
		city,
		block,
		status,
		last_update
		FROM
		MEMBER
		WHERE
		email = "${value}"
	</select>

	<select id="findById"
		resultType="com.example.training.common.entity.MemberEntity">
		SELECT id as memberId,
		email,
		password,
		last_name,
		first_name,
		phone_number,
		postcode,
		prefecture,
		city,
		block,
		status,
		last_update
		FROM MEMBER WHERE id = "${value}"
	</select>

	<select id="findAll"
		resultType="com.example.training.common.entity.MemberEntity">
		SELECT
		id as memberId,
		email,
		phone_number,
		last_name,
		first_name,
		postcode,
		prefecture,
		city,
		block,
		status,
		last_update
		FROM MEMBER
	</select>

	<insert id="save" useGeneratedKeys="true">
		INSERT INTO MEMBER (email, password, status) VALUES (
		"${email}",
		"${password}",
		"${status}"
		)
	</insert>

	<!-- <insert id="save" useGeneratedKeys="true">
		INSERT INTO MEMBER (email, password, last_update, status) VALUES (
		"${email.value}",
		"${digestPassword.value}",
		"${lastUpdate.value}",
		"${status}"
		)
	</insert> -->

	<update id="update">
		UPDATE MEMBER SET
		email = #{email},
		last_name = #{lastName},
		first_name = #{firstName},
		password = #{password},
		postcode = #{postcode},
		prefecture = #{prefecture},
		city = #{city},
		block = #{block},
		phone_number = #{phoneNumber},
		last_update = #{lastUpdate},
		status= #{status}
		WHERE
		id= #{memberId}
	</update>


</mapper>


