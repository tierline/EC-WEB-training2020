<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.training.repository.UserRepository">
	<select id="findByEmail"
		resultType="com.example.training.domain.Employee">
		select
		*
		from
		USERS
		where
		email = "${email}"
	</select>
</mapper>

	