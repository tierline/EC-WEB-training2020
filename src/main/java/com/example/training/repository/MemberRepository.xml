<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.training.repository.MemberRepository">
	<select id="findByEmail"
		resultType="com.example.training.domain.Member">
		select
		*
		from
		MEMBERS
		where
		email = "${email}"
	</select>

	<select id="findAll" resultType="com.example.training.domain.Member">
		select * from MEMBERS
	</select>

	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert
		into MEMBERS (id, email, password, address)
		values(
			"${id}"
			"${email}"
			"${password}"
			"${address}"
		)
	</insert>
</mapper>
