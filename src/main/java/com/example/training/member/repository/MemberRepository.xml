<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="com.example.training.member.repository.MemberRepository">
	<select id="findByEmail"
		resultType="com.example.training.member.domain.Member">
		select
		*
		from
		MEMBERS
		where
		email = "${email}"
	</select>

	<select id="findById" resultType="com.example.training.member.domain.Member">
		select * from MEMBERS where id = "${id}"
	</select>

	<select id="findAll" resultType="com.example.training.member.domain.Member">
		select * from MEMBERS
	</select>

	<insert id="create" useGeneratedKeys="true">
		insert into MEMBERS (email, password, address, lastUpdatedBy) values (
			"${member.email}",
			"${digest}",
			"${member.address}",
			"none"
		)
	</insert>

	<update id="update">
    update MEMBERS set email=#{member.email}, password=#{digest}, address=#{member.address}, lastUpdatedBy=#{lastUpdatedBy} where id= #{member.id}
	</update>

</mapper>
